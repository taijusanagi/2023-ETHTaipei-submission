{
  "name": "ethtaipei",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "run-s build:contracts build:app",
    "build:app": "yarn workspace @ethtaipei/app build",
    "build:contracts": "yarn workspace @ethtaipei/contracts compile",
    "test": "run-p test:*",
    "test:contracts": "yarn workspace @ethtaipei/contracts test",
    "lint": "run-p lint:*",
    "lint:app": "yarn workspace @ethtaipei/app lint",
    "lint:contracts": "yarn workspace @ethtaipei/contracts lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
